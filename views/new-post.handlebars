<article class="post">
  <div class="title">
    Create New Post
  </div>
  <div class="content">
     <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" style="width: 100%;"/>
      </div>
      <div>
        <label for="post_text">Post</label>
        <textarea id="post_text" name="post_text" style="width: 100%;"></textarea>
      </div>
      <button type="submit" class="btn">Create Post</button>
    </form>
  </div>
</article>
{{#if loggedIn}}
<script src="/javascript/add-post.js"></script>
{{/if}}